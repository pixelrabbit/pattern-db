doctype
html.no-js(ng-app="sampleApp")
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		title Pattern DB
		meta(name='description', content='')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		//bootstrap
		link(rel="stylesheet",href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css",crossorigin="anonymous")
		// angular
		script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
		//firebase
		script(src="//cdn.firebase.com/js/client/2.2.4/firebase.js")
		//angularfire
		script(src="//cdn.firebase.com/libs/angularfire/1.1.3/angularfire.min.js")
		//app
		script(src="app.js")
	body(ng-controller="patternBody")
		.container
			div
			//- anything typed in here is magically saved to our Firebase database! -->
			input(type="text",ng-model="data.text")
			//- all changes from our Firebase database magically appear here! -->
			h1 You said: {{data.text}} 
			.row
				.col-sm-4
					div.front
						img(src="img/cover.jpg")
				.col-sm-8 
					.row
						-var model = ["brand","id","year","size","category","location","comments"]
						each item,i in ["Brand","Number / ID","Year","Size","Category","Storage Location","Comments"]
							.col-sm-6
								.form-group
									label #{item}
									input.form-control(type="text",ng-model="data.#{model[i]}") 